<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:backgroundTint="@color/secondary_blue">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Child Information"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal" />

    <AutoCompleteTextView
        android:id="@+id/editTextChildName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Child's Name"
        android:inputType="textPersonName"
        android:background="@drawable/signuplogin_edittext"
        android:padding="10dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextChildAge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Child's Age"
        android:inputType="number"
        android:background="@drawable/signuplogin_edittext"
        android:padding="10dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonConfirmChildInfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Confirm"
        android:layout_marginTop="10dp"
        app:cornerRadius="20dp"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/black" />

</LinearLayout>