<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Gingivitis"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/imageGingivitis"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gingivitis1" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gingivitis is a common and mild form of gum disease characterized by redness, swelling, and bleeding of the gums. It is usually caused by the accumulation of plaque at the gumline and is reversible with good oral hygiene."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="6dp"
            android:justificationMode="inter_word"/>

        <TextView
            android:id="@+id/textCausesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Causes Gingivitis?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textCauses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Poor brushing and flossing habits\n• Accumulation of plaque\n• Smoking or tobacco use\n• Hormonal changes (e.g. puberty, pregnancy)\n• Certain medications and health conditions"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="6dp"
            android:justificationMode="inter_word"/>

        <TextView
            android:id="@+id/textHowItOccursHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How Does It Form?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textHowItOccurs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When plaque builds up along the gumline and is not properly removed, it irritates the gum tissue and leads to inflammation. This can result in bleeding gums, bad breath, and discomfort, which can progress to periodontitis if untreated."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="6dp"
            android:justificationMode="inter_word"/>

    </LinearLayout>
</ScrollView>
