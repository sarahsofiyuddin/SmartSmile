<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageDentalCalculus"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dental_calculus1" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dental Calculus"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dental calculus, also known as tartar, is hardened dental plaque that has been left untreated and calcified on the teeth. It typically forms along the gumline and between teeth. Plaque that is not removed with regular brushing and flossing can harden into calculus over time, contributing to gum inflammation and tooth decay."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="6dp" />

        <!-- Causes Header -->
        <TextView
            android:id="@+id/textCausesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Causes Dental Calculus?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginTop="24dp" />

        <!-- Causes List -->
        <TextView
            android:id="@+id/textCauses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Poor oral hygiene\n• Frequent consumption of sugary or starchy foods\n• Lack of regular dental checkups\n• Smoking or tobacco use\n• Naturally high levels of minerals in saliva"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="6dp" />

        <!-- How It Occurs -->
        <TextView
            android:id="@+id/textHowItOccursHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How Does It Form?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textHowItOccurs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When plaque on the teeth is not removed regularly through brushing and flossing, it mixes with minerals in saliva and hardens into calculus. Once formed, it can only be removed by a dental professional using special tools during cleaning."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="6dp" />

    </LinearLayout>
</ScrollView>
